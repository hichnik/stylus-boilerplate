//
// FIELDS
// ======
// These lay out controls, labels and additional elements within the context
// of a form
//

.fieldset,
.field
  margin-bottom $base--spacing

.fieldset
  .field
    margin-bottom 0

.field__question
  margin-bottom ( $base--spacing / 2 )

.field__assistance,
.field__feedback
  margin-top .5em

.field__assistance
  color #777
  font-size 0.9em

.field__feedback

  .field--error &
    color $color--error

  .field--success &
    color $color--success

  .field--notice &
    color $color--notice

  .field--warning &
    color $color--warning
